!DOCTYPE html>
<html lang="ja">
<head>
   <meta charset="UTF-8">
   <title>array</title>
   </head>
   <body>
    <script>
    // 配列宣言
    var fruits = new Array();

    //配列内の宣言
    fruits[0] = 'apple';
    fruits[1] = 'grape';
    fruits[2] = 'melon';

    //配列内の表示をする
    document.write(fruits[0]);
    document.write(fruits[1]);
    document.write(fruits[2]);
    </script>
   </body>
   </html>
